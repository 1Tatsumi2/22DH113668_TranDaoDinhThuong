@* filepath: Views/Product/Index.cshtml *@
@model IEnumerable<_22DH113668_TranDaoDinhThuong.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container-fluid mt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-11">
            <div class="card shadow-lg product-list-card">
                <div class="card-header gradient-pink">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="mb-0 text-white">
                            <i class="fas fa-sparkles me-3 text-warning"></i>
                            Danh sách sản phẩm thể thao
                        </h2>
                        <div class="header-decoration">
                            <i class="fas fa-heart text-warning"></i>
                            <i class="fas fa-star text-warning mx-2"></i>
                            <i class="fas fa-gem text-warning"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover modern-table">
                                <thead class="table-header">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                        <th><i class="fas fa-tag me-2"></i>Tên sản phẩm</th>
                                        <th><i class="fas fa-layer-group me-2"></i>Loại</th>
                                        <th><i class="fas fa-calendar-alt me-2"></i>Ngày SX</th>
                                        <th><i class="fas fa-money-bill-wave me-2"></i>Giá</th>
                                        <th><i class="fas fa-magic me-2"></i>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr class="product-row">
                                            <td>
                                                <span class="badge badge-id">#@product.ProductId</span>
                                            </td>
                                            <td class="fw-bold product-name">@product.NamePro</td>
                                            <td>
                                                <span class="badge badge-category">@product.Category</span>
                                            </td>
                                            <td class="text-muted">@product.ManufacturingDate.ToString("dd/MM/yyyy")</td>
                                            <td class="price-cell">
                                                @(product.Price?.ToString("N0") ?? "N/A") VND
                                            </td>
                                            <td>
                                                <div class="btn-group action-buttons" role="group">
                                                    <a asp-action="Details" asp-route-id="@product.ProductId"
                                                       class="btn btn-sm btn-view" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@product.ProductId"
                                                       class="btn btn-sm btn-edit" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-heart-broken"></i>
                            </div>
                            <h5 class="empty-title">Không có sản phẩm nào</h5>
                            <p class="empty-subtitle">Hãy thêm sản phẩm đầu tiên của bạn!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #ffeef8 0%, #f8e8ff 50%, #ffe8f0 100%);
        min-height: 100vh;
    }

    .product-list-card {
        border: none;
        border-radius: 25px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }

    .gradient-pink {
        background: linear-gradient(135deg, #ff6b9d 0%, #c44ce8 50%, #ff8a80 100%);
        border: none;
        padding: 1.5rem;
    }

    .header-decoration {
        animation: sparkle 2s infinite;
    }

    @@keyframes sparkle {
        0%, 100% { transform: scale(1); opacity: 0.8; }
        50% { transform: scale(1.2); opacity: 1; }
    }

    .modern-table {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(255, 107, 157, 0.1);
    }

    .table-header {
        background: linear-gradient(135deg, #ffd1dc 0%, #ffb3d9 100%);
        color: #444;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table-header th {
        border: none;
        padding: 1rem;
        position: relative;
    }

    .product-row {
        transition: all 0.3s ease;
        border: none;
    }

    .product-row:hover {
        background: linear-gradient(135deg, #fff0f5 0%, #ffeef8 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 107, 157, 0.15);
    }

    .product-row td {
        border: none;
        padding: 1.2rem 1rem;
        vertical-align: middle;
    }

    .badge-id {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.5rem 0.8rem;
        border-radius: 20px;
        font-weight: 500;
    }

    .badge-category {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        color: #444;
        padding: 0.5rem 0.8rem;
        border-radius: 20px;
        font-weight: 500;
        text-transform: capitalize;
    }

    .product-name {
        color: #e91e63;
        font-size: 1.1rem;
    }

    .price-cell {
        color: #4caf50;
        font-weight: 600;
        font-size: 1.05rem;
    }

    .action-buttons {
        gap: 0.5rem;
    }

    .btn-view {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        transition: all 0.3s ease;
    }

    .btn-view:hover {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .btn-edit {
        background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
        border: none;
        color: #e65100;
        border-radius: 50%;
        width: 35px;
        height: 35px;
        transition: all 0.3s ease;
    }

    .btn-edit:hover {
        transform: scale(1.1) rotate(-5deg);
        box-shadow: 0 5px 15px rgba(252, 182, 159, 0.4);
        color: #e65100;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #e91e63;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.7;
        animation: heartbeat 2s infinite;
    }

    @@keyframes heartbeat {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .empty-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .empty-subtitle {
        opacity: 0.8;
        font-size: 1.1rem;
    }

    /* Floating hearts animation */
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            radial-gradient(2px 2px at 20px 30px, rgba(255, 182, 193, 0.3), transparent),
            radial-gradient(2px 2px at 40px 70px, rgba(255, 192, 203, 0.3), transparent),
            radial-gradient(1px 1px at 90px 40px, rgba(255, 182, 193, 0.3), transparent);
        background-repeat: repeat;
        background-size: 75px 100px;
        animation: sparkles 20s linear infinite;
        pointer-events: none;
        z-index: -1;
    }

    @@keyframes sparkles {
        from { transform: translateY(0); }
        to { transform: translateY(-100px); }
    }
</style>